<resources>

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="MapMarker">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>

	<style name="VendorMapMarker" parent="MapMarker">
		<item name="android:background">@drawable/purple_tooltip</item>
	</style>

	<style name="ClientMapMarker" parent="MapMarker">
		<item name="android:background">@drawable/black_tooltip</item>
	</style>

	<style name="YouMapMarker" parent="MapMarker">
		<item name="android:background">@drawable/blue_tooltip</item>
	</style>

	<style name="FBProfilePicture">
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<!-- Currently fontAssetName only apply to CustomTextView's -->

	<style name="RobotoBold">
		<item name="fontAssetName">Roboto/Roboto-Bold</item>
	</style>

	<style name="Roboto">
		<item name="fontAssetName">Roboto/Roboto-Regular</item>
	</style>

	<style name="RobotoHeadline" parent="RobotoBold">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="RobotoThinHeadline" parent="Roboto">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">25sp</item>
	</style>

	<style name="Headline1" parent="RobotoHeadline">
		<item name="android:textSize">72sp</item>
	</style>

	<style name="Headline2" parent="RobotoHeadline">
		<item name="android:textSize">40sp</item>
	</style>

	<style name="Headline3" parent="RobotoHeadline">
		<item name="android:textSize">36sp</item>
	</style>

	<style name="Headline4" parent="RobotoHeadline">
		<item name="android:textSize">25sp</item>
	</style>

	<style name="Header" parent="RobotoHeadline">
		<item name="android:textSize">24sp</item>
	</style>

	<style name="MapSnippet">
		<item name="android:layout_height">150dp</item>
		<item name="android:layout_width">fill_parent</item>
	</style>

	<style name="NoActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="LoginTitleText" parent="RobotoBold">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">70sp</item>
	</style>

	<style name="LoginTitleTextWhite" parent="LoginTitleText">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="LoginTitleTextBlue" parent="LoginTitleText">
		<item name="android:textColor">@color/light_blue</item>
	</style>

</resources>

