<resources>

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="MapMarker">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>

	<style name="VendorMapMarker" parent="MapMarker">
		<item name="android:background">@drawable/purple_tooltip</item>
	</style>

	<style name="ClientMapMarker" parent="MapMarker">
		<item name="android:background">@drawable/black_tooltip</item>
	</style>

	<style name="YouMapMarker" parent="MapMarker">
		<item name="android:background">@drawable/blue_tooltip</item>
	</style>

	<!-- Currently fontAssetName only apply to CustomTextView's -->

	<style name="Roboto">
		<item name="fontAssetName">Roboto/Roboto-Regular</item>
	</style>

	<style name="RobotoHeadline" parent="Roboto">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Headline1" parent="RobotoHeadline">
		<item name="android:textSize">30sp</item>
	</style>

	<style name="Headline2" parent="RobotoHeadline">
		<item name="android:textSize">26sp</item>
	</style>

	<style name="Headline3" parent="RobotoHeadline">
		<item name="android:textSize">24sp</item>
	</style>

</resources>

